{
    "name": "spatie/phpunit-watcher",
    "description": "Automatically rerun PHPUnit tests when source code changes",
    "keywords": [
        "spatie",
        "phpunit-watcher"
    ],
    "homepage": "https://github.com/spatie/phpunit-watcher",
    "license": "MIT",
    "authors": [
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be",
            "homepage": "https://spatie.be",
            "role": "Developer"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/michaelw85/resource-watcher"
        }
    ],
    "require": {
        "php": "^7.2 | ^8.0",
        "clue/stdio-react": "^2.4",
        "jolicode/jolinotif": "^2.2",
        "symfony/console": "^5 | ^6 | ^7",
        "symfony/finder": "^5.4 | ^6 | ^7",
        "symfony/process": "^5.4 | ^6 | ^7",
        "symfony/yaml": "^5.2 | ^6 | ^7",
        "yosymfony/resource-watcher": "^2.0 | ^3.1"
    },
    "conflict": {
        "yosymfony/resource-watcher": "<2.0",
        "symfony/console": "<5.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Spatie\\PhpUnitWatcher\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\PhpUnitWatcher\\Test\\": "tests"
        },
        "files": [
            "tests/helpers.php"
        ]
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
    },
    "bin": [
        "phpunit-watcher"
    ]
}
